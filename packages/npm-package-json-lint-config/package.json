{
  "name": "@spear-ai/npm-package-json-lint-config",
  "version": "1.0.4",
  "description": "Spear AI `npm-package-json-lint` config files",
  "author": {
    "name": "Spear AI",
    "email": "org@spear.ai",
    "url": "https://spear.ai"
  },
  "dependencies": {
    "npm-package-json-lint-config-default": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "8.36.0",
    "npm-package-json-lint": "6.4.0",
    "prettier": "2.8.7",
    "tsup": "6.7.0",
    "typescript": "4.9.5"
  },
  "exports": {
    "./*": "./dist/*.cjs"
  },
  "license": "MIT",
  "peerDependencies": {
    "npm-package-json-lint": "^6.4.0"
  },
  "repository": {
    "directory": "packages/npm-package-json-lint-config",
    "type": "git",
    "url": "https://github.com/spear-ai/citizen.git"
  },
  "scripts": {
    "build": "tsup src --clean",
    "dev": "yarn build --watch",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "prettier --write .",
    "lint:eslint": "eslint --max-warnings 0 .",
    "lint:npm": "npmPkgJsonLint --configFile dist/spear-library.cjs .",
    "lint:prettier": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "update": "yarn upgrade-interactive"
  },
  "type": "module"
}
