{
  "name": "@spear-ai/npm-package-json-lint-config",
  "version": "1.0.3",
  "description": "Spear AI `npm-package-json-lint` config files",
  "license": "MIT",
  "author": {
    "name": "Spear AI",
    "email": "org@spear.ai",
    "url": "https://spear.ai"
  },
  "repository": {
    "directory": "packages/npm-package-json-lint-config",
    "type": "git",
    "url": "https://github.com/spear-ai/citizen.git"
  },
  "type": "module",
  "exports": {
    "./*": "./dist/*.cjs"
  },
  "scripts": {
    "build": "tsup src",
    "check": "yarn lint && yarn typecheck",
    "dev": "yarn build --watch",
    "lint": "yarn lint:npm",
    "lint:npm": "npmPkgJsonLint --configFile dist/spear-library.cjs .",
    "outdated": "yarn outdated",
    "typecheck": "tsc --noEmit",
    "update": "yarn upgrade-interactive"
  },
  "dependencies": {
    "npm-package-json-lint-config-default": "^5.0.0"
  },
  "devDependencies": {
    "npm-package-json-lint": "6.4.0",
    "tsup": "6.6.0",
    "typescript": "4.9.5"
  },
  "peerDependencies": {
    "npm-package-json-lint": "^6.4.0"
  }
}
